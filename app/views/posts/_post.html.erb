<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= post.text %>
  </p>

  <p>
    <strong>Autor:</strong>
    <%= post.autor_id %>
  </p>

  <p>
    <strong>Comment counter:</strong>
    <%= post.comment_counter %>
  </p>

  <p>
    <strong>Like counter:</strong>
    <%= post.like_counter %>
  </p>

</div>
