<section>
  <img class='photo' src= '<%=@user.photo%>'>
  <div>
    <h1><%= @user.name %></h1> 
    <p>number of posts: <%= @user.post_counter %></p>
  </div>
</section>

<div>
  <h3>Bio</h3>
  <p> <%= @user.bio %></p>
</div>

<ul>
  <% @user.last_3_posts.each do |post| %>
  <li>
    <h3><%= post.title %></h3>
    <p> <%= post.text %> </p>
    <p> Comments: <%= post.comment_counter %>, Likes: <%= post.like_counter %> </p>
  </li>
  <% end %>
</ul>
<div>
  <a class="btn btn-all-posts" type="button" href="<%= user_posts_path(@user) %>">See all posts</a>
</div>


