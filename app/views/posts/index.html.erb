<section class='user'>
  <img class='user-img' src= '<%=@user.photo%>'>
  <div class ='user-details'>
    <h1 class ='user-name'><%= @user.name %></h1> 
    <p class = 'user-counter'>number of posts: <%= @user.post_counter %></p>
  </div>
</section>

<section class="post-container">
  <% @posts.each do |post| %>
  <article class='post-details'>
    <div class='post'>  
      <h3> <a class="post-title" role="button" href="<%= user_post_path(@user, post) =%>"><%= post.title =%></a> </h3>
      <p> <%= post.text*10 %> </p>
      <p class='post-counter user-counter'> Comments: <%= post.comment_counter %>, Likes: <%= post.like_counter %> </p>
    </div>
    <div class='comment-container'>
      <% post.last_5_comments.each do |comment| %>
        <li class='comment'>
          <p class ='comment-text'> <b class='comment-name'> <%= comment.user.name %>: </b> <%= comment.text %> </p>
        </li>
      <% end %>
    </div>
  </article>
  <% end %>

  <div style="display: flex; justify-content: center">
    <button class="btn" type="button">Pagination</button>
  </div>
</section>